# GuardRail Environment Configuration
# Copy this file to .env and fill in the values

# ============================================================================
# Database
# ============================================================================
DATABASE_URL=postgres://guardrail:guardrail_dev@localhost:5432/guardrail

# ============================================================================
# Redis
# ============================================================================
REDIS_URL=redis://localhost:6379

# ============================================================================
# Authentication
# ============================================================================
JWT_SECRET=change_this_to_a_secure_random_string_at_least_32_chars
JWT_EXPIRY_SECONDS=900
REFRESH_TOKEN_EXPIRY_DAYS=7

# ============================================================================
# Service URLs (for inter-service communication)
# ============================================================================
IDENTITY_SERVICE_URL=http://localhost:3001
POLICY_ENGINE_URL=http://localhost:3002
MOVEMENT_LEDGER_URL=http://localhost:3003
CHAIN_ANCHOR_URL=http://localhost:3004
OPA_URL=http://localhost:8181

# ============================================================================
# API Gateway
# ============================================================================
API_GATEWAY_PORT=3000
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# ============================================================================
# Frontend
# ============================================================================
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3010
NEXTAUTH_SECRET=change_this_to_a_secure_random_string

# ============================================================================
# Blockchain (Ethereum L2 - Arbitrum)
# ============================================================================
ETHEREUM_RPC_URL=https://arb-sepolia.g.alchemy.com/v2/YOUR_API_KEY
ETHEREUM_PRIVATE_KEY=
ETHEREUM_CONTRACT_ADDRESS=

# ============================================================================
# Blockchain (Solana)
# ============================================================================
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_PRIVATE_KEY=
SOLANA_PROGRAM_ID=

# ============================================================================
# Anchoring Configuration
# ============================================================================
ANCHOR_BATCH_INTERVAL_SECONDS=3600
ANCHOR_BATCH_MIN_EVENTS=10
ANCHOR_BATCH_MAX_EVENTS=1000

# ============================================================================
# External Services (KYC Providers)
# ============================================================================
# Chainalysis
CHAINALYSIS_API_KEY=
CHAINALYSIS_API_URL=https://api.chainalysis.com

# Elliptic
ELLIPTIC_API_KEY=
ELLIPTIC_API_URL=https://aml-api.elliptic.co

# ============================================================================
# Monitoring
# ============================================================================
AXIOM_API_TOKEN=
AXIOM_DATASET=guardrail-logs

SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ============================================================================
# Logging
# ============================================================================
RUST_LOG=debug
LOG_FORMAT=pretty
# LOG_FORMAT=json  # Use for production
